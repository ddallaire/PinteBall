<div class="bp-card-wrapper">
    {{#link-to link beerId}}
    <div class="bp-card">
        <div class="image-wrapper">
            <img src={{imagePath}} alt="image did not load" onerror="this.onerror=null; this.src='/assets/images/default-beer-image.jpg'" width=100% height=100%>
        </div>
        <div class="content-wrapper">
            <h2>{{title}}</h2>
            <p class="subheading">{{subheading}}</p>
            <div class="description-wrapper">
                <p class="card-description">{{description}}</p>
            </div>
            <div class="footer-wrapper">
                {{yield}}
            </div>
        </div>
    </div>
    {{/link-to}}
</div>
