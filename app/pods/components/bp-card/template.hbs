{{#link-to link cardId}}
<div class="bp-card">
  <div class="image-wrapper">
    <img src={{imagePath}} alt="Image did not load" onerror="this.onerror=null; this.src='/assets/images/default-beer-image.jpg'" width=100% height=100%>
  </div>
  <div class="content-wrapper">
    <div class="title-wrapper {{if smallTitle "small-title"}}">
      {{#if (is-eq icon "beer")}}
        <i class="fa fa-beer"></i>
      {{else}}
        <i class="fa fa-building"></i>
      {{/if}}
      {{#if smallTitle}}
        <h6>{{title}}</h6>
      {{else}}
        <h2>{{title}}</h2>
      {{/if}}
    </div>
    <p class="subheading">{{subheading}}</p>
    <div class="description-wrapper">
        <p class="card-description">{{description}}</p>
    </div>
    <div class="footer-wrapper">
        {{yield}}
    </div>
  </div>
  <div class="right-border">
    <i class="fa fa-chevron-right"></i>
  </div>
</div>
{{/link-to}}
