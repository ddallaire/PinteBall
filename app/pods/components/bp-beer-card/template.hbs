<div class="beer-card-wrapper">
    {{#link-to "profile"}}
    <div class="beer-card">
        <div class="image-wrapper">
            <img src={{imagePath}} alt="image did not load" onerror='this.onerror=null; this.src="https://i.imgur.com/xG41sKc.jpg"' width=100% height=100%>
        </div>
        <div class="content-wrapper">
            <h2>{{title}}</h2>
            <p class="beer-type-brewery">{{type}} | {{brewery}}</p>
            <div class="description-wrapper">
                <p class="beer-description">{{description}}</p>
            </div>
            <div class="rating-wrapper">
                <div class="stars">{{bp-stars-display rating=rating}}</div>
                <p>|</p>
                <div class="ibu">
                    <p>IBU: </p>
                    <p>{{ibu}}</p>
                </div>
                <div class="alcool">
                    <p>Alc:</p>
                    <p>{{alcool}} %</p>
                </div>
            </div>
        </div>
    </div>
    {{/link-to}}
</div>
