<div class="header-container">
  <div class="image-wrapper">
    {{#if roundedImage}}
      <img class="display-image rounded-image" src="{{imagePath}}" alt="Image did not load" onerror="this.onerror=null; this.src='/assets/images/default-beer-image.jpg'">
    {{else}}
      <img class="display-image" src="{{imagePath}}" alt="Image did not load" onerror="this.onerror=null; this.src='/assets/images/default-beer-image.jpg'">
    {{/if}}
  </div>
  <div class="infos">
    <div class="textual-info">
      <h2 class="display-name">{{name}}</h2>
      <p class="tags">
        {{array-join tags}}
      </p>
      <p class="description">
        {{description}}
      </p>
      <div class="items">
        {{#each items as |item|}}
          {{#link-to tagLink item.id}}
            <i class="fa fa-chevron-right"></i>
            <p>{{item.name}}</p>
          {{/link-to}}
        {{/each}}
      </div>
    </div>
    <div class="numerical-info">
      <div class="rating">
        <div class="stars">{{bp-stars-display rating=rating}}</div>
        <p class="rating-text"><span class="info-highlighted-text">{{round-rating rating}}</span>/5 (X review(s))</p>
      </div>
      {{#if ibu}}
      <div class="ibu-percent-container">
        <div>
          <p>IBU: <span class="info-highlighted-text">{{ibu}}</span></p>
        </div>
        <div>
          <p>%: <span class="info-highlighted-text">{{alcoholPercent}}%</span></p>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>
<div>
  <button onclick={{action 'showAddReview'}}>Rate it</button>
  {{#if displayAddReview}}
    {{bp-add-review type=type id=beerOrBreweryid}}
  {{/if}}
</div>
<div class="reviews">
  <h2>Recent reviews</h2>
  <div>
    {{#each reviews as |review|}}
      {{bp-review review=review type=type}}
    {{/each}}
  </div>
</div>
